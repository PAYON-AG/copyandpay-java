<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>COPYandPAY Java</display-name>
	<servlet>
		<servlet-name>PaymentServlet</servlet-name>
		<servlet-class>com.payon.copyandpay.PaymentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StatusServlet</servlet-name>
		<servlet-class>com.payon.copyandpay.StatusServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StatusServlet</servlet-name>
		<url-pattern>/status</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PaymentServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
</web-app>
